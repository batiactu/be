<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" 
	id = "batiactu" 
	version = "1.0.0" 
	versionCode = "1">



    <name>Batiactu Emploi</name>
    <description>Batiactu Emploi : 1er site de référence des annonces emploi du BTP</description>
    <author href="http://www.capinfopro.com" email="webmaster@capinfopro.com">Capinfopro</author>

    <icon src="images/icon.png" />



    <gap:splash src="images/splash.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="images/splash.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="images/splash.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="images/splash.png" gap:platform="ios" width="1024" height="768" />

    <gap:splash src="images/splash.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="images/splash.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="images/splash.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="images/splash.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="images/splash.png" gap:platform="blackberry" />
    <gap:splash src="images/splash.png" gap:platform="winphone" />
    <gap:splash src="images/splash.png" gap:platform="winphone" />

    <gap:splash src="images/splash.png" /> <!-- default 320x480 pixels -->

    <icon src="images/icon.png" gap:platform="ios" width="57" height="57" /> <!-- iPhone 3G, 3GS, iPod Touch 2G, 3G -->
    <icon src="images/icon72.png" gap:platform="ios" width="72" height="72" /> <!-- iPad 1, 2, iPad mini -->
    <icon src="images/icon114.png" gap:platform="ios" width="114" height="114" /> <!-- iPhone 4, 4S, iPod Touch 4G -->
    <icon src="images/icon144.png" gap:platform="ios" width="144" height="144" /> <!-- iPad 3, 4 -->

    <icon src="images/icon.png" gap:platform="android" gap:density="ldpi" /> <!-- 36 pixels -->
    <icon src="images/icon.png" gap:platform="android" gap:density="mdpi" /> <!-- 48 pixels -->
    <icon src="images/icon.png" gap:platform="android" gap:density="hdpi" /> <!-- 72 pixels -->
    <icon src="images/icon.png" gap:platform="android" gap:density="xhdpi" /> <!-- 96 pixels -->

    <icon src="images/icon.png" gap:platform="blackberry" /> <!-- 72 pixels -->
    <icon src="images/icon_hover.png" gap:platform="blackberry" gap:state="hover"/> <!-- 72 pixels -->

    <icon src="images/icon.png" gap:platform="winphone" /> <!-- 57 pixels -->
    <icon src="images/tileicon.png" gap:platform="winphone" gap:role="background" /> <!-- 72 pixels -->

    <icon src="images/icon29.png" gap:platform="webos" /> <!-- 29 pixels -->
    <icon src="images/icon.png" gap:platform="webos" gap:role="mini" /> <!-- 15 pixels -->

	

    <preference name="phonegap-version" value="2.7.0" />

	<!-- orientation with possible values default (both), landscape, or portrait -->
    <preference name="orientation" value="default" />

    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" /> <!-- remove the upper bar on iOS and Android -->




    <!-- iOS PREFERENCES -->
        
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" /> <!-- if set to false, the splash screen must be hidden using a JavaScript API -->
        
    <!-- ANDROID PREFERENCES -->
        
    <preference name="android-minSdkVersion" value="7" /> <!-- minimum Android 2.1 -->
    <!-- <preference name="android-maxSdkVersion" value="17" /> maximum Android 4.2 -->
    <preference name="android-installLocation" value="auto" />
    <preference name="splash-screen-duration" value="3000" />
    <preference name="load-url-timeout" value="20000" />
        
    <!-- BLACKBERRY PREFERENCES -->
        
    <preference name="disable-cursor" value="false" />
        
    <!-- PHONEGAP API FEATURES PREFERENCES -->
        
    <preference name="permissions" value="none"/>

	
	
</widget>
